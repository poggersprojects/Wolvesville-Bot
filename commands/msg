const { SlashCommandBuilder } = require('@discordjs/builders');

module.exports = {
  data: new SlashCommandBuilder()
    .setName('msg')
    .setDescription('Send a message to the Wolvesville chat')
    .addStringOption(option =>
      option.setName('message')
        .setDescription('Enter your message')
        .setRequired(true)
        .setMaxLength(100)),
  async execute(interaction) {
    const discordUser = interaction.user.tag;
    const message = interaction.options.getString('message');

    try {
      // Send the message and reply to the user
      await interaction.reply(`${discordUser}: ${message}`);
    } catch (error) {
      console.error('Error sending message:', error);
      interaction.reply({ content: 'There was an error trying to send your message. Please try again later.', ephemeral: true });
    }
  },
};
